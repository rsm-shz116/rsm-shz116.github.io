poisson_loglikelihood <- function(lambda, Y){
if (lambda <= 0) {
return(-Inf)  # log-likelihood is undefined for non-positive lambda
}
n <- length(Y)
log_likelihood <- -n * lambda + sum(Y) * log(lambda) - sum(lgamma(Y + 1))
return(log_likelihood)
}
